<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="~/matrix-admin-package-full/assets/extra-libs/multicheck/multicheck.css">
    <link href="~/matrix-admin-package-full/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    <!--<link href="~/matrix-admin-package-full/dist/css/style.min.css" rel="stylesheet">-->
</head>

<body>
    @{
        ViewBag.Title = "About";
    }
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <table id="zero_config" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="th-sm">
                    Item Name
                </th>
                <th class="th-sm">
                    Image
                </th>
                <th class="th-sm">
                    Price
                </th>
                @if (Session["UserName"] != null)
                {
                    <th>
                        Edit/Delete
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.model)
            {
                <tr>
                    <td>
                        <label>@item.ItemName</label>
                    </td>
                    <td>
                        <img src=@item.Image_URL alt="Furniture Image" />
                    </td>
                    <td>
                        <h1>@item.Price</h1>PKR
                    </td>
                    @if (Session["UserName"] != null)
                    {
                        <td>
                            <input type="button"
                                   class="btn btn-success btn-sm text-white"
                                   value="Edit"
                                   onclick="location.href='@Url.Action("Edit", "Home", new { id = item.ItemId })'" />
                            <input type="button"
                                   class="btn btn-danger btn-sm text-white"
                                   value="Delete"
                                   onclick="location.href='@Url.Action("Delete", "Home", new { id = item.ItemId })'" />
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <script src="~/matrix-admin-package-full/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/matrix-admin-package-full/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/matrix-admin-package-full/assets/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/matrix-admin-package-full/assets/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <script src="~/matrix-admin-package-full/dist/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/matrix-admin-package-full/dist/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/matrix-admin-package-full/dist/js/custom.min.js"></script>
    <!-- this page js -->
    <script src="~/matrix-admin-package-full/assets/extra-libs/multicheck/datatable-checkbox-init.js"></script>
    <script src="~/matrix-admin-package-full/assets/extra-libs/multicheck/jquery.multicheck.js"></script>
    <script src="~/matrix-admin-package-full/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable();
    </script>

</body>

</html>